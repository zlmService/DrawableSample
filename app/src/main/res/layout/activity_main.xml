<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.demo.zlm.drawablesample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--repeat表示简单的水平和垂直方向上的平铺效果-->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="@drawable/bitmap_drawable"
            android:gravity="center"
            android:text="" />

        <!--mirror 表示在水平和垂直方向的镜面投影效果-->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bitmap_drawable_mirror"
            android:gravity="center"
            android:text="" />

        <!--clamp效果 图片四周的像素会扩展到周围区域-->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:background="@drawable/bitmap_drawable_clamp"
            android:gravity="center"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--渐变-->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_drawable_gradient"
            android:gravity="center"
            android:text="" />

        <!--纯色-->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/shape_drawable_solid"
            android:gravity="center"
            android:text="" />

        <!--叠加-->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/layer_list_edit"
            android:gravity="center"
            android:text="" />

    </LinearLayout>

    <!--//根据状态切换Drawable-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_drawable" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/selector_drawable" />

        <TextView
            android:id="@+id/text_transition"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/transition_drawable" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagelevel1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/level_list_drawable" />

        <ImageView
            android:id="@+id/imagelevel2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/level_list_drawable" />

        <com.demo.zlm.drawablesample.CircleView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#000" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/inset_drawable"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/image_scale"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/scale_drawable" />

        <ImageView
            android:id="@+id/image_clip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/clip_drawable" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img5"

        android:layout_width="50dp"
        android:layout_height="50dp" />


</LinearLayout>
